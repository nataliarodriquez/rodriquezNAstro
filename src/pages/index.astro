        semesters
        pagefooter
    -->

    <!-- Begin Pageheader -->
    <header id="pageheader">
        pageheader
    </header>
    <!-- End Pageheader -->

    <!-- Begin Showcase -->
    <section id="showcase">
        showcase
    </section>
    <!-- End Showcase -->
    
    <!-- Begin Features -->
    <section id="features">
        features
    </section>
    <!-- End Features -->

    <!-- Begin Pagecontent -->
    <main id="pagecontent">
        pagecontent
    </main>
    <!-- End Pagecontent -->

    <!-- Begin Semesters -->
    <section id="semesters">semesters</section>
    <!-- End Semesters -->

